{
    "formTitle": "Product Master",
    "sections": [
        {
            "title": "Basic Information",
            "fields": [
                {
                    "name": "productName",
                    "label": "Product Name",
                    "type": "text",
                    "placeholder": "Enter product name",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Product name"
                        },
                        {
                            "min": 3,
                            "message": "Product name must be at least 3 characters"
                        }
                    ]
                },
                {
                    "name": "category",
                    "label": "Category",
                    "type": "select",
                    "options": [
                        {
                            "label": "Electronics",
                            "value": "electronics"
                        },
                        {
                            "label": "Clothing",
                            "value": "clothing"
                        },
                        {
                            "label": "Groceries",
                            "value": "groceries"
                        },
                        {
                            "label": "Furniture",
                            "value": "furniture"
                        }
                    ],
                    "validations": [
                        {
                            "required": true,
                            "message": "Category is required"
                        }
                    ]
                },
                {
                    "name": "sku",
                    "label": "SKU",
                    "type": "text",
                    "placeholder": "Enter SKU",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid SKU"
                        },
                        {
                            "pattern": "^[A-Za-z0-9_-]+$",
                            "message": "SKU must contain only letters, numbers, hyphens or underscores"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Pricing & Stock",
            "fields": [
                {
                    "name": "unitPrice",
                    "label": "Unit Price",
                    "type": "number",
                    "placeholder": "Enter unit price",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Unit price"
                        },
                        {
                            "min": 1,
                            "message": "Price must be greater than 0"
                        }
                    ]
                },
                {
                    "name": "quantity",
                    "label": "Quantity in Stock",
                    "type": "number",
                    "placeholder": "Enter stock quantity",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Quantity"
                        },
                        {
                            "min": 0,
                            "message": "Quantity cannot be negative"
                        }
                    ]
                },
                {
                    "name": "isActive",
                    "label": "Active Product",
                    "type": "checkbox",
                    "defaultValue": true,
                    "validations": []
                }
            ]
        },
        {
            "title": "Supplier Details",
            "fields": [
                {
                    "name": "supplierName",
                    "label": "Supplier Name",
                    "type": "text",
                    "placeholder": "Enter supplier name",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Supplier name"
                        }
                    ]
                },
                {
                    "name": "supplierContact",
                    "label": "Supplier Contact",
                    "type": "text",
                    "placeholder": "Enter supplier contact number",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Supplier contact"
                        },
                        {
                            "pattern": "^[0-9]{10}$",
                            "message": "Contact number must be 10 digits"
                        }
                    ]
                },
                {
                    "name": "deliveryDays",
                    "label": "Delivery Time (Days)",
                    "type": "number",
                    "placeholder": "Enter delivery days",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid Delivery time"
                        },
                        {
                            "min": 1,
                            "message": "Delivery days must be at least 1"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Additional Information",
            "fields": [
                {
                    "name": "description",
                    "label": "Description",
                    "type": "textarea",
                    "placeholder": "Enter product description",
                    "validations": []
                },
                {
                    "name": "warranty",
                    "label": "Warranty (Months)",
                    "type": "number",
                    "placeholder": "Enter warranty period",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid warranty period"
                        },
                        {
                            "min": 0,
                            "message": "Warranty cannot be negative"
                        }
                    ]
                },
                {
                    "name": "launchDate",
                    "label": "Launch Date",
                    "type": "date",
                    "validations": [
                        {
                            "required": true,
                            "message": "Enter a valid date"
                        }
                    ]
                }
            ]
        }
    ]
}